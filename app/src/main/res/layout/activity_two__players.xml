<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bachor.tysiac.Two_Players">

    <TextView
        android:id="@+id/points_1"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/text_TwoPlayers_Name1"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/points_2"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editText2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText2"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.163" />

    <Button
        android:id="@+id/button_Bomb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bomba"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/text_TwoPlayers_Name1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_Bomb_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bomba"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/text_TwoPlayers_Name2"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_Bomb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nie zużyto"
        app:layout_constraintLeft_toRightOf="@+id/button_Bomb_1"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_Bomb_1"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/text_Bomb_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nie zużyto"
        app:layout_constraintLeft_toRightOf="@+id/button_Bomb_2"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_Bomb_2"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/button_TwoPlayers_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powrót"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:text="Rozdanie"
        app:layout_constraintBottom_toBottomOf="@+id/button_TwoPlayers_Back"
        app:layout_constraintTop_toTopOf="@+id/button_TwoPlayers_Back"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.841"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_TwoPlayers_Name1"
        android:layout_width="71dp"
        android:layout_height="13dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_TwoPlayers_Name2"
        android:layout_width="71dp"
        android:layout_height="13dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Bomb_1" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_TwoPlayers_Name1" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-7dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_TwoPlayers_Name2" />

</android.support.constraint.ConstraintLayout>
